<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/iv_news_icon"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_news_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_news_icon"
        android:maxLines="2"
        android:ellipsize="end"
      android:layout_marginRight="10dp"
        android:text="hahahahhaf我试试hah你好发发发啥打法是否发斯蒂芬发送的发斯蒂芬"
        android:textStyle="bold"
       />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_news_abs"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignRight="@id/tv_news_title"
        android:layout_below="@id/tv_news_title"
        android:layout_alignLeft="@id/tv_news_title"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="djjjjjjjjjjjjjjjjjjafda我通过沙的根深蒂固傻狗"
        android:textSize="12dp" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_height="20dp">

    <ImageView
        android:id="@+id/iv_author_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_news_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/iv_author_icon"
        android:text="腾讯医典"
        android:textSize="10dp" />

</RelativeLayout>



</RelativeLayout>